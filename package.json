{
  "name": "timetravel-state",
  "version": "1.0.0",
  "description": "Time travel state management library with undo/redo capabilities",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "rimraf dist && tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "husky install",
    "prepublishOnly": "npm test && npm run lint && npm run build",
    "preversion": "npm run lint",
    "docs": "typedoc --out docs src"
  },
  "keywords": [
    "typescript",
    "state-management",
    "time-travel",
    "undo-redo",
    "state"
  ],
  "author": "Zahid Hasan",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zahidhasann88/timetravel-state.git"
  },
  "bugs": {
    "url": "https://github.com/zahidhasann88/timetravel-state/issues"
  },
  "homepage": "https://github.com/zahidhasann88/timetravel-state#readme",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@typescript-eslint/eslint-plugin": "^8.21.0",
    "@typescript-eslint/parser": "^8.21.0",
    "eslint": "^8.56.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.5",
    "typedoc": "^0.27.6",
    "typescript": "^5.7.3"
  }
}
